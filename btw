#!/usr/bin/env python3
import sys
import os
from pathlib import Path

# Add the captains-log directory to Python path
captains_log_dir = Path(__file__).parent
sys.path.insert(0, str(captains_log_dir))

# Import and run the btw module
if __name__ == "__main__":
    try:
        import btw
        btw.main()
    except ImportError as e:
        print(f"Error: Cannot import btw module: {e}")
        sys.exit(1)
